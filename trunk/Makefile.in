######################################################################
# $Id: Makefile.in,v 1.37 1999-05-22 02:42:15 hartmann Exp $
######################################################################

TARGET = freesweep
VERSION = 0.86

SRCS = clear.c drawing.c error.c fgui.c files.c game.c gpl.c main.c pbests.c play.c sl.c stats.c tick.c utils.c
HEADS = sweep.h defaults.h
MISC = README Makefile sweeprc install-sh configure.in Makefile.in config.guess configure config.sub sweep.h.in
CLEANUP = a.out $(TARGET) core made $(OBJS) config.cache config.log config.status

SYSTEM_TYPE = @host@

CC = @CC@
CFLAGS = -Wall -DVERSION=\"$(VERSION)\" @CFLAGS@ @DEFS@ 
LIBS = @LIBS@
LDFLAGS = @LDFLAGS@
OBJS = $(SRCS:.c=.o)

TARGET_DIR = $(TARGET)-$(VERSION)
FILES = $(SRCS) $(MISC) $(HEADS)

# for systems that have purify
PURE_ARGS = /s/purify/bin/purify -collector=/s/purify/bin/collect2

.SUFFIXES: .c .o
.PHONY: clean sterile lines distclean
#######################################################################
%.o: %.c $(HEADS) Makefile
	@echo 'Building $<'
	@@RM@ -f $*.o 
	$(CC) $(CFLAGS) -c $<

$(TARGET): $(OBJS) $(HEADS) $(MISC)
	@echo 'Linking'
	@@RM@ -f $(TARGET)
	$(PURIFY) $(CC) $(CFLAGS) $(OBJS) $(LDFLAGS) $(LIBS) -o $(TARGET)

configure: configure.in
	@echo 'Creating configure script'
	@autoconf

clean:
	@-@RM@ -rf $(CLEANUP)

pure:
	@make clean
	@make "PURIFY=$(PURE_ARGS)"

distclean:
	@make sterile

sterile:
	-make clean
	@-@RM@ -f */*.o */core */made */$(TARGET) */a.out sweep.h

tar: $(SRCS) $(MISC)
	(cd ../ ; @LN_S@ sweep $(TARGET_DIR))
	(cd ../ ; @TAR@ cvfh $(TARGET_DIR).tar $(FILES:%=$(TARGET_DIR)/%))
	(cd ../ ; rm $(TARGET_DIR))

tags: $(SRCS) $(HEADS) $(MISC)
	@ctags $(SRCS) $(HEADS)

lines: $(SRCS) $(HEADS)
	@echo 'Total lines of code:'
	@wc -l $(SRCS) $(HEADS)
